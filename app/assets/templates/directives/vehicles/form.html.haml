%form.form-horizontal{ ng: { submit: 'submitHandler()' } }
  .row
    .col-md-6
      .form-group
        %label.col-sm-4.control-label Наименование
        .col-sm-8
          %input.form-control{ type: 'text', ng: { model: 'vehicle.name' } }
      .form-group
        %label.col-sm-4.control-label Гос. номер
        .col-sm-8
          %input.form-control{ type: 'text', ng: { model: 'vehicle.state_number.string' } }
    .col-md-6
      .form-group
        %label.col-sm-4.control-label Номер ПТС
        .col-sm-8
          %input.form-control{ type: 'text', ng: { model: 'vehicle.certificate_of_title.number' } }
      .form-group
        %label.col-sm-4.control-label Дата ПТС
        .col-sm-8
          %input.form-control{ type: 'text', ng: { model: 'vehicle.certificate_of_title.issue_date' } }
  .row
    .alert.alert-success
      %p.text-center Images
  .row
    .col-md-6.col-md-offset-6
      .col-sm-offset-4.col-sm-8
        %input.btn.btn-primary{ type: 'submit', value: 'Сохранить', ng: { class: 'status' } }
        %input.btn.btn-default{ type: 'button', value: 'Назад' }